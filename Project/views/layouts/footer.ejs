<footer class="relative bg-[#01072a] pt-8 pb-6 text-white">
    <div class="container mx-auto px-4 max-w-6xl">
        <div class="flex flex-wrap text-left lg:text-left">
            <div class="w-full lg:w-6/12 px-4">
                <h4 class="text-3xl fonat-semibold text-blueGray-700">
                    Let's keep in touch!
                </h4>
                <h5 class="text-lg mt-0 mb-2 text-blueGray-600">
                    Find us on any of these platforms, we respond 1-2 business days.
                </h5>
                <div class="mt-6 lg:mb-0 mb-6 gap-3 flex">
                    <% const socialMedia = [
                        { name: 'Twitter', icon: 'twitter-icon.svg', link: 'https://www.twitter.com' },
                        { name: 'Facebook', icon: 'facebook-icon.svg', link: 'https://www.facebook.com' },
                        { name: 'Instagram', icon: 'instagram-icon.svg', link: 'https://www.instagram.com' },
                        { name: 'Telegram', icon: 'telegram-icon.svg', link: 'https://www.telegram.com' },
                        { name: 'Youtube', icon: 'youtube-icon.svg', link: 'https://www.youtube.com' },
                        { name: 'Github', icon: 'github-icon.svg', link: 'https://github.com/mzain7/real-estate' }
                    ]; %>
                    <% socialMedia.forEach(platform => { %>
                        <a class="inline-block hover:shadow-lg rounded-full" href="<%= platform.link %>" target="_blank" rel="noreferrer">
                            <img class="overflow-hidden" src="/image/icons/<%= platform.icon %>" alt="<%= platform.name %>">
                        </a>
                    <% }); %>
                </div>
            </div>
            <div class="w-full lg:w-6/12 px-4">
                <div class="flex flex-wrap items-top mb-6">
                    <% const usefulLinks = [
                        { text: 'About Us', url: '#' },
                        { text: 'Blog', url: '#' },
                        { text: 'Github', url: '#' },
                        { text: 'Free Products', url: '#' }
                    ]; %>
                    <div class="w-full md:w-1/2 lg:w-4/12 px-4 lg:ml-auto mb-5">
                        <span class="block uppercase text-blueGray-500 text-sm font-semibold mb-2">
                            Useful Links
                        </span>
                        <ul class="list-unstyled">
                            <% usefulLinks.forEach(link => { %>
                                <li>
                                    <a class="text-blueGray-600 hover:text-blueGray-800 font-semibold block pb-2 text-sm hover:underline" href="<%= link.url %>"><%= link.text %></a>
                                </li>
                            <% }); %>
                        </ul>
                    </div>
                    <% const otherResources = [
                        { text: 'MIT License', url: '#' },
                        { text: 'Terms & Conditions', url: '#' },
                        { text: 'Privacy Policy', url: '#' },
                        { text: 'Contact Us', url: '#' }
                    ]; %>
                    <div class="md:w-1/2 lg:w-4/12 px-4">
                        <span class="block uppercase text-blueGray-500 text-sm font-semibold mb-2">
                            Other Resources
                        </span>
                        <ul class="list-unstyled">
                            <% otherResources.forEach(link => { %>
                                <li>
                                    <a class="text-blueGray-600 hover:text-blueGray-800 font-semibold block pb-2 text-sm hover:underline" href="<%= link.url %>"><%= link.text %></a>
                                </li>
                            <% }); %>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <hr class="my-6 border-blueGray-300">
        <div class="flex flex-wrap items-center md:justify-between justify-center">
            <div class="w-full md:w-4/12 px-4 mx-auto text-center">
                <div class="text-sm text-blueGray-500 font-semibold py-1">
                    Copyright Â© <span id="get-current-year">2023</span>
                    <a href="#" class="text-blueGray-500 hover:text-gray-800" target="_blank" rel="noreferrer">
                        Real Estate by
                    </a>
                    <a href="" class="text-blueGray-500 hover:text-blueGray-800">
                        Zain
                    </a>
                    .
                </div>
            </div>
        </div>
    </div>
</footer>