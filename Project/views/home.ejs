<%- layout('./layouts/boilerplate.ejs') %>
<div>
  <div
    class="flex flex-col justify-center items-center gap-6 py-5 px-10 md:p-28 mx-auto bg-[url('/image/hero.jpg')] h-[40vh] md:h-[60vh] bg-cover bg-no-repeat bg-left-bottom mb-2"
  >
    <h1 class="text-slate-300 font-semibold text-3xl md:text-6xl">
      <span class="text-2xl text-golden">Explore Local Real Estate</span>
      <br />
      Find a <span class="text-slate-200">Home</span> to Suit <br />
      Your Lifestyle
    </h1>
    <form
      method="GET"
      action="/"
      class="bg-slate-100 pl-3 pr-1 py-1 rounded-3xl flex items-center justify-between w-full md:w-1/2"
    >
      <input
        type="text"
        placeholder="Search..."
        class="bg-transparent focus:outline-none w-full h-10 pl-5"
        name="searchTerm"
      />
      <button type="submit" class="rounded-full bg-black hover:opacity-70">
        <i class="fas fa-search text-white text-[40px] font-light p-2"></i>
      </button>
    </form>
  </div>
  <hr />
  <div class="max-w-6xl mx-auto p-3 pt-0 flex flex-col gap-8 mb-10">
    <%- include('./property/carouselProperty.ejs', { properties: offerProperties, title: 'Recent offers', linkText: 'Show more offers', linkTo: '/search?offer=true' }) %>
    <%- include('./property/carouselProperty.ejs', { properties: rentProperties, title: 'Recent places for rent', linkText: 'Show more places for rent', linkTo: '/search?type=rent' }) %>
    <%- include('./property/carouselProperty.ejs', { properties: saleProperties, title: 'Recent places for sale', linkText: 'Show more places for sale', linkTo: '/search?type=sale' }) %>
  </div>
</div>
